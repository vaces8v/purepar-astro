---
import BaseLayout from '../../layouts/BaseLayout.astro';

const service = {
  title: 'Ремонт бани и сауны',
  metaTitle: 'Ремонт бани и сауны под ключ в Москве — от 300 000 ₽ | PurePar',
  metaDescription: 'Ремонт и реконструкция бань: замена отделки, модернизация вентиляции, установка новой печи. Диагностика бесплатно. Гарантия 1 год.',
  price: 'от 300 000 ₽',
  heroText: 'Восстановление и модернизация бань и саун в Москве и Подмосковье. Замена отделки, улучшение вентиляции, устранение дефектов.',
  features: [
    'Бесплатная диагностика состояния',
    'Выявление скрытых проблем',
    'Полная замена отделки',
    'Модернизация вентиляции',
    'Замена или ремонт печи',
    'Обновление электрики и освещения',
  ],
  includes: [
    'Осмотр и диагностика',
    'Демонтаж старой отделки',
    'Ремонт каркаса при необходимости',
    'Новая пароизоляция',
    'Новая вагонка',
    'Обновление полков',
    'Электрика и освещение',
    'Вентиляция',
  ],
};
---

<BaseLayout 
  title={service.metaTitle} 
  description={service.metaDescription}
  heroTag="Услуги"
  heroTitle={service.title}
  heroSubtitle={service.heroText}
>
  <section class="service-content">
    <div class="container">
      <div class="content-grid">
        <div class="features-block">
          <h2>Что мы делаем</h2>
          <ul class="features-list">
            {service.features.map(f => <li><span class="check">✓</span> {f}</li>)}
          </ul>
        </div>
        <div class="includes-block">
          <h2>Что входит в ремонт</h2>
          <ul class="includes-list">
            {service.includes.map((item, i) => <li><span class="num">{i + 1}</span> {item}</li>)}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="problems-section">
    <div class="container">
      <h2>Когда нужен ремонт?</h2>
      <div class="problems-grid">
        <div class="problem-card">
          <h3>Потемнение древесины</h3>
          <p>Вагонка потеряла цвет, появились пятна — пора обновить отделку</p>
        </div>
        <div class="problem-card">
          <h3>Запах сырости</h3>
          <p>Плохая вентиляция приводит к появлению плесени и неприятного запаха</p>
        </div>
        <div class="problem-card">
          <h3>Протечки</h3>
          <p>Нарушена пароизоляция — влага проникает в утеплитель</p>
        </div>
        <div class="problem-card">
          <h3>Скрипящие полки</h3>
          <p>Расшатанные крепления, трещины в древесине</p>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-box">
        <h2>Баня требует ремонта?</h2>
        <p>Проведём бесплатную диагностику и предложим оптимальное решение</p>
        <a href="/#contact-form" class="btn btn-primary">Заказать диагностику</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style is:inline>
  .service-hero { padding: 40px 0 60px; background: var(--bg-warm); }
  .breadcrumb { font-size: 13px; color: var(--text-muted); margin-bottom: 24px; }
  .breadcrumb a { color: var(--text-muted); text-decoration: none; }
  .breadcrumb a:hover { color: var(--accent); }
  .service-hero h1 { font-size: clamp(32px, 5vw, 48px); font-weight: 800; margin: 0 0 16px; }
  .hero-text { font-size: 18px; color: var(--text-muted); max-width: 700px; margin: 0 0 32px; line-height: 1.6; }
  .hero-price { display: flex; align-items: baseline; gap: 12px; margin-bottom: 32px; }
  .price-label { font-size: 14px; color: var(--text-muted); }
  .price-value { font-size: 32px; font-weight: 800; color: var(--accent); }

  .service-content { padding: 80px 0; }
  .content-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 48px; }
  .features-block h2, .includes-block h2 { font-size: 24px; font-weight: 700; margin: 0 0 24px; }
  .features-list, .includes-list { list-style: none; padding: 0; margin: 0; }
  .features-list li, .includes-list li { display: flex; align-items: flex-start; gap: 12px; padding: 12px 0; border-bottom: 1px solid var(--border); font-size: 15px; }
  .check { color: var(--accent); font-weight: 700; }
  .num { width: 28px; height: 28px; background: var(--accent-light); color: var(--accent); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 13px; flex-shrink: 0; }

  .problems-section { padding: 80px 0; background: var(--bg-warm); }
  .problems-section h2 { font-size: 28px; font-weight: 700; text-align: center; margin: 0 0 40px; }
  .problems-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 24px; }
  .problem-card { background: var(--white); padding: 28px; border-radius: var(--radius); border: 1px solid var(--border); }
  .problem-card h3 { font-size: 18px; font-weight: 700; margin: 0 0 12px; }
  .problem-card p { font-size: 14px; color: var(--text-muted); margin: 0; line-height: 1.5; }

  .cta-section { padding: 80px 0; }
  .cta-box { background: var(--text); color: var(--white); padding: 48px; border-radius: var(--radius); text-align: center; }
  .cta-box h2 { font-size: 28px; font-weight: 700; margin: 0 0 12px; }
  .cta-box p { color: rgba(255,255,255,0.8); margin: 0 0 24px; }

  @media (max-width: 900px) {
    .content-grid { grid-template-columns: 1fr; }
    .problems-grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 600px) {
    .problems-grid { grid-template-columns: 1fr; }
    .cta-box { padding: 32px 24px; }
  }
</style>
