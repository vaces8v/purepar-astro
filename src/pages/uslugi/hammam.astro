---
import BaseLayout from '../../layouts/BaseLayout.astro';

const service = {
  title: 'Строительство хаммама под ключ',
  metaTitle: 'Строительство хаммама (турецкой бани) в Москве — от 1 000 000 ₽ | PurePar',
  metaDescription: 'Строительство турецкого хаммама: мозаика, мрамор, парогенератор, подогреваемые лежаки. Индивидуальный проект. Гарантия 1 год.',
  price: 'от 1 000 000 ₽',
  heroText: 'Турецкая баня с мягким паром и комфортной температурой в Москве и МО. Полный цикл от проектирования до запуска.',
  features: [
    'Индивидуальный проект под помещение',
    'Многослойная гидроизоляция',
    'Отделка мозаикой или натуральным мрамором',
    'Качественный парогенератор',
    'Подогреваемые лежаки и пол',
    'Система вентиляции и конденсатоотвода',
  ],
  includes: [
    'Разработка дизайн-проекта',
    'Гидроизоляция помещения',
    'Система обогрева пола и лежаков',
    'Отделка мозаикой или мрамором',
    'Установка парогенератора',
    'Изготовление лежаков',
    'Освещение',
    'Вентиляция',
  ],
};
---

<BaseLayout 
  title={service.metaTitle} 
  description={service.metaDescription}
  heroTag="Услуги"
  heroTitle={service.title}
  heroSubtitle={service.heroText}
>
  <section class="service-content">
    <div class="container">
      <div class="content-grid">
        <div class="features-block">
          <h2>Особенности хаммама</h2>
          <ul class="features-list">
            {service.features.map(f => <li><span class="check">✓</span> {f}</li>)}
          </ul>
        </div>
        <div class="includes-block">
          <h2>Что входит в стоимость</h2>
          <ul class="includes-list">
            {service.includes.map((item, i) => <li><span class="num">{i + 1}</span> {item}</li>)}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="hammam-info">
    <div class="container">
      <h2>Почему выбирают хаммам?</h2>
      <div class="info-grid">
        <div class="info-card">
          <h3>Мягкий пар</h3>
          <p>Температура 40-50°C и влажность 100% — комфортно для всех возрастов</p>
        </div>
        <div class="info-card">
          <h3>Тёплые поверхности</h3>
          <p>Подогреваемые лежаки и пол создают эффект глубокого прогрева</p>
        </div>
        <div class="info-card">
          <h3>Эстетика</h3>
          <p>Мозаика и мрамор превращают хаммам в произведение искусства</p>
        </div>
        <div class="info-card">
          <h3>Здоровье</h3>
          <p>Мягкий режим подходит людям с противопоказаниями к высоким температурам</p>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-box">
        <h2>Мечтаете о собственном хаммаме?</h2>
        <p>Расскажите о помещении — разработаем индивидуальный проект</p>
        <a href="/#contact-form" class="btn btn-primary">Обсудить проект</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style is:inline>
  .service-hero { padding: 40px 0 60px; background: var(--bg-warm); }
  .breadcrumb { font-size: 13px; color: var(--text-muted); margin-bottom: 24px; }
  .breadcrumb a { color: var(--text-muted); text-decoration: none; }
  .breadcrumb a:hover { color: var(--accent); }
  .service-hero h1 { font-size: clamp(32px, 5vw, 48px); font-weight: 800; margin: 0 0 16px; }
  .hero-text { font-size: 18px; color: var(--text-muted); max-width: 700px; margin: 0 0 32px; line-height: 1.6; }
  .hero-price { display: flex; align-items: baseline; gap: 12px; margin-bottom: 32px; }
  .price-label { font-size: 14px; color: var(--text-muted); }
  .price-value { font-size: 32px; font-weight: 800; color: var(--accent); }

  .service-content { padding: 80px 0; }
  .content-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 48px; }
  .features-block h2, .includes-block h2 { font-size: 24px; font-weight: 700; margin: 0 0 24px; }
  .features-list, .includes-list { list-style: none; padding: 0; margin: 0; }
  .features-list li, .includes-list li { display: flex; align-items: flex-start; gap: 12px; padding: 12px 0; border-bottom: 1px solid var(--border); font-size: 15px; }
  .check { color: var(--accent); font-weight: 700; }
  .num { width: 28px; height: 28px; background: var(--accent-light); color: var(--accent); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 13px; flex-shrink: 0; }

  .hammam-info { padding: 80px 0; background: var(--bg-warm); }
  .hammam-info h2 { font-size: 28px; font-weight: 700; text-align: center; margin: 0 0 40px; }
  .info-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 24px; }
  .info-card { background: var(--white); padding: 28px; border-radius: var(--radius); border: 1px solid var(--border); text-align: center; }
  .info-card h3 { font-size: 18px; font-weight: 700; margin: 0 0 12px; }
  .info-card p { font-size: 14px; color: var(--text-muted); margin: 0; line-height: 1.5; }

  .cta-section { padding: 80px 0; }
  .cta-box { background: var(--text); color: var(--white); padding: 48px; border-radius: var(--radius); text-align: center; }
  .cta-box h2 { font-size: 28px; font-weight: 700; margin: 0 0 12px; }
  .cta-box p { color: rgba(255,255,255,0.8); margin: 0 0 24px; }

  @media (max-width: 900px) {
    .content-grid { grid-template-columns: 1fr; }
    .info-grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 600px) {
    .info-grid { grid-template-columns: 1fr; }
    .cta-box { padding: 32px 24px; }
  }
</style>
