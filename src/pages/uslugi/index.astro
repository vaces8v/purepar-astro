---
import BaseLayout from '../../layouts/BaseLayout.astro';

const services = [
  { slug: 'stroitelstvo-bani', name: 'Строительство бань', price: 'от 500 000 ₽', desc: 'Полный цикл строительства от фундамента до первого пара' },
  { slug: 'otdelka-bani', name: 'Отделка бань', price: 'от 400 000 ₽', desc: 'Внутренняя отделка парной липой, кедром, ольхой' },
  { slug: 'otdelka-sauny', name: 'Отделка саун', price: 'от 336 000 ₽', desc: 'Финские сауны с сухим жаром и минималистичным дизайном' },
  { slug: 'remont-bani', name: 'Ремонт бань', price: 'от 300 000 ₽', desc: 'Восстановление и модернизация существующих парных' },
  { slug: 'hammam', name: 'Хаммам', price: 'от 1 000 000 ₽', desc: 'Турецкие бани с мягким паром и мозаичной отделкой' },
  { slug: 'infrakrasnaya-sauna', name: 'ИК-сауна', price: 'от 300 000 ₽', desc: 'Компактные инфракрасные кабины для дома и квартиры' },
];
---

<BaseLayout
  title="Услуги по строительству и отделке бань — PurePar"
  description="Полный спектр услуг: строительство бань под ключ, отделка парных, ремонт саун, хаммамы. Работаем в Москве и МО. Гарантия 1 год."
  heroTag="Наши услуги"
  heroTitle="Строительство и отделка бань"
  heroSubtitle="Полный спектр услуг для создания идеальной парной. От проектирования до первого пара — всё под ключ с гарантией качества."
>

  <section class="services-grid-section">
    <div class="container">
      <div class="services-grid">
        {services.map(service => (
          <a href={`/uslugi/${service.slug}`} class="service-card-link">
            <article class="service-card">
              <h2>{service.name}</h2>
              <p>{service.desc}</p>
              <div class="service-price">{service.price}</div>
              <span class="service-more">Подробнее →</span>
            </article>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-box">
        <h2>Нужна консультация?</h2>
        <p>Расскажите о вашем проекте — поможем выбрать оптимальное решение</p>
        <a href="/#contact-form" class="btn btn-primary">Получить консультацию</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style is:inline>
  .page-hero {
    padding: 60px 0 40px;
    text-align: center;
  }
  .section-tag {
    display: inline-block;
    background: var(--accent-light);
    color: #6B4400;
    padding: 8px 20px;
    border-radius: 100px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 16px;
  }
  .page-hero h1 {
    font-size: clamp(32px, 5vw, 48px);
    font-weight: 800;
    margin: 0 0 16px;
  }
  .page-hero p {
    color: var(--text-muted);
    font-size: 18px;
    max-width: 600px;
    margin: 0 auto;
  }

  .services-grid-section { padding: 40px 0 80px; }
  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }
  .service-card-link {
    text-decoration: none;
    color: inherit;
  }
  .service-card {
    background: var(--white);
    padding: 32px;
    border-radius: var(--radius);
    border: 1px solid var(--border);
    transition: all 0.3s;
    height: 100%;
  }
  .service-card:hover {
    box-shadow: var(--shadow);
    transform: translateY(-4px);
    border-color: var(--accent);
  }
  .service-card h2 {
    font-size: 22px;
    font-weight: 700;
    margin: 0 0 12px;
  }
  .service-card p {
    color: var(--text-muted);
    font-size: 15px;
    margin: 0 0 20px;
    line-height: 1.5;
  }
  .service-price {
    font-size: 20px;
    font-weight: 700;
    color: var(--accent);
    margin-bottom: 16px;
  }
  .service-more {
    color: var(--accent);
    font-weight: 600;
    font-size: 14px;
  }

  .cta-section { padding: 0 0 80px; }
  .cta-box {
    background: var(--bg-warm);
    padding: 48px;
    border-radius: var(--radius);
    text-align: center;
  }
  .cta-box h2 {
    font-size: 28px;
    font-weight: 700;
    margin: 0 0 12px;
  }
  .cta-box p {
    color: var(--text-muted);
    margin: 0 0 24px;
  }

  @media (max-width: 900px) {
    .services-grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 600px) {
    .services-grid { grid-template-columns: 1fr; }
    .cta-box { padding: 32px 24px; }
  }
</style>
