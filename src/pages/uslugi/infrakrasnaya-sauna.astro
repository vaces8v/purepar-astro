---
import BaseLayout from '../../layouts/BaseLayout.astro';

const service = {
  title: 'Инфракрасная сауна под ключ',
  metaTitle: 'Инфракрасная сауна под ключ в Москве — от 300 000 ₽ | PurePar',
  metaDescription: 'Установка ИК-сауны: карбоновые излучатели, кедровая отделка, быстрый прогрев за 15 минут. Компактные кабины для дома и квартиры.',
  price: 'от 300 000 ₽',
  heroText: 'Современная альтернатива классической сауне с лечебным эффектом в Москве и МО. Компактные кабины для дома и квартиры.',
  features: [
    'Компактные размеры — от 1 м²',
    'Низкое энергопотребление — от 1.5 кВт',
    'Быстрый прогрев — 15-20 минут',
    'Глубокий прогрев тканей',
    'Простая установка без вентиляции',
    'Минимальное обслуживание',
  ],
  includes: [
    'Подбор оптимальной кабины',
    'Карбоновые ИК-излучатели',
    'Отделка кедром',
    'Стеклянная дверь',
    'Цифровой пульт управления',
    'Аудиосистема',
    'LED-хромотерапия',
    'Монтаж и подключение',
  ],
};
---

<BaseLayout 
  title={service.metaTitle} 
  description={service.metaDescription}
  heroTag="Услуги"
  heroTitle={service.title}
  heroSubtitle={service.heroText}
>
  <section class="service-content">
    <div class="container">
      <div class="content-grid">
        <div class="features-block">
          <h2>Преимущества ИК-сауны</h2>
          <ul class="features-list">
            {service.features.map(f => <li><span class="check">✓</span> {f}</li>)}
          </ul>
        </div>
        <div class="includes-block">
          <h2>Что входит в комплект</h2>
          <ul class="includes-list">
            {service.includes.map((item, i) => <li><span class="num">{i + 1}</span> {item}</li>)}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="benefits-section">
    <div class="container">
      <h2>Польза инфракрасного тепла</h2>
      <div class="benefits-grid">
        <div class="benefit-card">
          <h3>Детоксикация</h3>
          <p>ИК-лучи проникают на глубину 4 см, выводя токсины с потом</p>
        </div>
        <div class="benefit-card">
          <h3>Похудение</h3>
          <p>За 30 минут сжигается до 600 ккал благодаря глубокому прогреву</p>
        </div>
        <div class="benefit-card">
          <h3>Кожа</h3>
          <p>Улучшение кровообращения придаёт коже здоровый вид</p>
        </div>
        <div class="benefit-card">
          <h3>Мышцы</h3>
          <p>Снятие мышечного напряжения и ускорение восстановления</p>
        </div>
      </div>
    </div>
  </section>

  <section class="cta-section">
    <div class="container">
      <div class="cta-box">
        <h2>Хотите ИК-сауну дома?</h2>
        <p>Подберём компактную кабину под ваше помещение</p>
        <a href="/#contact-form" class="btn btn-primary">Получить консультацию</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style is:inline>
  .service-hero { padding: 40px 0 60px; background: var(--bg-warm); }
  .breadcrumb { font-size: 13px; color: var(--text-muted); margin-bottom: 24px; }
  .breadcrumb a { color: var(--text-muted); text-decoration: none; }
  .breadcrumb a:hover { color: var(--accent); }
  .service-hero h1 { font-size: clamp(32px, 5vw, 48px); font-weight: 800; margin: 0 0 16px; }
  .hero-text { font-size: 18px; color: var(--text-muted); max-width: 700px; margin: 0 0 32px; line-height: 1.6; }
  .hero-price { display: flex; align-items: baseline; gap: 12px; margin-bottom: 32px; }
  .price-label { font-size: 14px; color: var(--text-muted); }
  .price-value { font-size: 32px; font-weight: 800; color: var(--accent); }

  .service-content { padding: 80px 0; }
  .content-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 48px; }
  .features-block h2, .includes-block h2 { font-size: 24px; font-weight: 700; margin: 0 0 24px; }
  .features-list, .includes-list { list-style: none; padding: 0; margin: 0; }
  .features-list li, .includes-list li { display: flex; align-items: flex-start; gap: 12px; padding: 12px 0; border-bottom: 1px solid var(--border); font-size: 15px; }
  .check { color: var(--accent); font-weight: 700; }
  .num { width: 28px; height: 28px; background: var(--accent-light); color: var(--accent); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 13px; flex-shrink: 0; }

  .benefits-section { padding: 80px 0; background: var(--bg-warm); }
  .benefits-section h2 { font-size: 28px; font-weight: 700; text-align: center; margin: 0 0 40px; }
  .benefits-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 24px; }
  .benefit-card { background: var(--white); padding: 28px; border-radius: var(--radius); border: 1px solid var(--border); text-align: center; }
  .benefit-card h3 { font-size: 18px; font-weight: 700; margin: 0 0 12px; }
  .benefit-card p { font-size: 14px; color: var(--text-muted); margin: 0; line-height: 1.5; }

  .cta-section { padding: 80px 0; }
  .cta-box { background: var(--text); color: var(--white); padding: 48px; border-radius: var(--radius); text-align: center; }
  .cta-box h2 { font-size: 28px; font-weight: 700; margin: 0 0 12px; }
  .cta-box p { color: rgba(255,255,255,0.8); margin: 0 0 24px; }

  @media (max-width: 900px) {
    .content-grid { grid-template-columns: 1fr; }
    .benefits-grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 600px) {
    .benefits-grid { grid-template-columns: 1fr; }
    .cta-box { padding: 32px 24px; }
  }
</style>
